<%= form_with model: [:admin, @promotion], local: true do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :conditions %><br>
    <%= form.text_area :conditions, value: @promotion.conditions.to_json %>
    <small>Enter conditions in JSON format.</small>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
